generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid()) @db.Uuid
  name     String?
  email    String  @unique
  password String

  tripsOwned   Trip[]       @relation("TripOwner")
  memberships  TripMember[]
  expensesPaid Expense[]    @relation("ExpensePaidBy")

  createdAt DateTime @default(now())

  @@map("users")
}

model Trip {
  id          String   @id @default(uuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime

  ownerId String @db.Uuid
  owner   User   @relation("TripOwner", fields: [ownerId], references: [id])

  members    TripMember[]
  expenses   Expense[]
  activities Activity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trips")
}

model TripMember {
  id String @id @default(uuid())

  tripId String
  userId String @db.Uuid

  role TripRole @default(MEMBER)

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([tripId, userId])
  @@map("trip_members")
}

enum TripRole {
  ADMIN
  MEMBER
}

model Expense {
  id     String  @id @default(uuid())
  title  String
  amount Decimal @db.Decimal(10, 2)

  tripId   String
  paidById String @db.Uuid

  category ExpenseCategory?
  date     DateTime         @default(now())

  trip   Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  paidBy User @relation("ExpensePaidBy", fields: [paidById], references: [id])

  participants ExpenseParticipant[]

  createdAt DateTime @default(now())

  @@map("expenses")
}

enum ExpenseCategory {
  FOOD
  TRANSPORT
  LODGING
  LEISURE
  OTHER
}

model ExpenseParticipant {
  id String @id @default(uuid())

  expenseId String
  userId    String @db.Uuid

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  @@unique([expenseId, userId])
  @@map("expense_participants")
}

model Activity {
  id          String  @id @default(uuid())
  title       String
  description String?

  date          DateTime
  time          String?
  estimatedCost Decimal? @db.Decimal(10, 2)

  status ActivityStatus @default(PLANNED)

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("activities")
}

enum ActivityStatus {
  PLANNED
  DONE
  CANCELED
}
